@model IEnumerable<City>

@{
    ViewData["Title"] = "All Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert alert-primary text-center">Cities</h1>

<a asp-action="Create" asp-controller="City" class="btn btn-outline-success pulse mb-3"><i class="fas fa-city"></i> Add New City</a>

<table class="table table-hover tblLoad">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Country)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Country.Name)</td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </tr>
        }
    </tbody>
</table>