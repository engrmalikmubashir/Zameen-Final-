
@using Zameen.Extensions

@model Zameen.Models.ViewModels.CityViewModel

@{
    ViewData["Title"] = "Update City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert alert-primary text-center">Update City</h1>

<div class="col-md-6 offset-md-3">
    <div class="card border-success rounded shadow-lg p-3">
        <div class="card-body">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="City.Id" />
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Countries"></label>
                    <select class="custom-select" asp-for="City.CountryId" asp-items="Model.Countries.ToSelectListItem()"></select>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="City.Name"></label>
                    <input asp-for="City.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit"><i class="fas fa-city"></i> Update City</button>
                    <a asp-action="Index" asp-controller="City" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>