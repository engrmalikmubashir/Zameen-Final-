@model Zameen.Models.ViewModels.FloorViewModel
@using Zameen.Extensions

@{
    ViewData["Title"] = "Add New Floor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert alert-primary text-center">Add New Floor</h1>

<div class="col-md-6 offset-md-3">
    <div class="card border-success rounded shadow-lg p-3">
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Buildings"></label>
                    <select class="custom-select mb-2" asp-for="Floor.BuildingId" asp-items="Model.Buildings.ToSelectListItem()"></select>
                    <span class="text-danger" asp-validation-for="Floor.BuildingId"></span>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Floor.Name"></label>
                    <input asp-for="Floor.Name" class="form-control mb-2" placeholder="Enter Floor Name" />
                    <span class="text-danger" asp-validation-for="Floor.Name"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit"><i class="fas fa-building"></i> Add New Floor</button>
                    <a asp-action="Index" asp-controller="Floor" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}