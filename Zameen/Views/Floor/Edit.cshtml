@using Zameen.Extensions

@model Zameen.Models.ViewModels.FloorViewModel

@{
    ViewData["Title"] = "Update Floor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert alert-primary text-center">Update Floor</h1>

<div class="col-md-6 offset-md-3">
    <div class="card border-success rounded shadow-lg p-3">
        <div class="card-body">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Floor.Id" />
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Buildings"></label>
                    <select class="custom-select" asp-for="Floor.BuildingId" asp-items="Model.Buildings.ToSelectListItem()"></select>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Floor.Name"></label>
                    <input asp-for="Floor.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit"><i class="fas fa-building"></i> Update Floor</button>
                    <a asp-action="Index" asp-controller="Floor" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>